.content{
  height: 38px;
  line-height: 38px;
}
.icon_left{
  width: 20px;
  height: 20px;
  margin-right: 5px;
  vertical-align: middle;
  position: relative;
  top: -2px;
}
.icon_right{
  width: 15px;
  height: 15px;
}
.text{
  width:95%; 
  margin-left:5px; 
  font-size:13px;
  color:#666;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden; 
}
.border{
  border-bottom: 1px solid #E3E3E3
}
.noborder{
  border-bottom: none
}