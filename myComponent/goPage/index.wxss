.item{
  background: #fff;
  position: relative;
}
.icon{
  width: 20px;
  height: 20px;
  margin-right: 5px;
  vertical-align: middle;
  position: relative;
  top: -2px;
}
.text{
  width:100%;
  height: 44px;
  line-height: 44px;
  margin-left:8px;
  font-size:16px;
}
.enter{
  height:44px;
  line-height: 44px
}
.eventCover{
  width: 100%;
  height: 44px;
  position: absolute;
  top: 0;
  left:0;
}
.border{
  border-bottom: 1px solid #E3E3E3
}
.noborder{
  border-bottom: none
}