<view class='header' style='background:{{bgColor}}'>
  <image class='header_bg' src='{{bgImg}}'></image>
  <view class='headImg'>
    <view class='headImg_bb'>
      <!-- <image class='headImg_img' src='{{headImg}}'></image> -->
      <open-data style='width:200px;' type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class='userInfo'>
    <view class='userName'>{{name}}
     <image bindtap='edit' class='editUserinfo' src='../../image/mine_edit.png'></image></view>
  </view>
  <view class='other'>
    <view class='otherItem1'><image bindtap='like' class='otherIcon' src='../../image/mine_like.png'></image><text bindtap='like'>我的收藏</text></view>
    <view class='otherItem2'><image bindtap='address' class='otherIcon' src='../../image/mine_address.png'></image><text bindtap='address'>地址管理</text></view>
  </view>
</view>