.header{
  height:180px;
  width:100%;
  position: relative;
}
.header_bg{
   width:100%; 
   height: 100%;
}
.headImg{
  position: absolute;
  top: 20px;
  width: 100%;
}
.headImg_bb{
  border-radius: 50%;
  width: 64px;
  height:64px;
  line-height: 63px;
  margin: 0 auto;
  text-align: center;
  background: #fff;
  overflow: hidden
}
.headImg_img{
  border-radius: 50%;
  width: 60px;
  height:60px;
  position: relative;
  top: 2px;
}
.userInfo{
  position: absolute;
  top: 100px;
  text-align: center;
  width:100%;
  color: #fff;
  font-size: 16px;
}
.editUserinfo{
  width: 16px;
  height:16px;
  vertical-align:middle;
  position: relative;
  top: -2px;
  
}
.other{
  position: absolute;
  top: 140px;
  text-align: center;
  width:100%;
  color: #fff;
  font-size: 14px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.otherItem1{
  flex-grow: 1;
  text-align: right;
  padding-right: 15px;
}
.otherItem2{
  flex-grow: 1;
  text-align: left;
  padding-left: 15px;
}
.otherIcon{
  width: 14px;
  height:14px;
  vertical-align:middle;
  position: relative;
  top: -1px; 
  left: -3px;
}