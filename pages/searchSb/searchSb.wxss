page{
  background: #F2F0F0;
  height: 100%;
  padding-top: 42px;
}
.xq_item{
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  height: 100px;
  padding: 10px 10px;
  background: #fff;
}
.xq_left{
  width: 100px;
  height: 100%;
  margin-right: 10px;
}
.xq_left_img{
  width: 100%;
  height: 100%;
  border-radius: 3px;
}
.xq_right{
  flex-grow: 1;
  padding: 0px 0;
}
.xq_line1{
  font-size: 32rpx;
  max-width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 4px;
}
.xq_line2{
  font-size: 26rpx;
  max-width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
