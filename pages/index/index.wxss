.index_bg{
  width: 100%;
  max-height: 241px;
  display: block;
  background-size: cover; 
  background-position: center 0;
  position: relative;
  overflow: hidden;
}
.loginPlease{
  position: absolute;
  top: 5px;
  left: 5px;
}
.loginImg{
  width: 18px;
  height: 18px;
  vertical-align: middle
}
.loginText{
  color: #fff;
  padding-left: 3px;
  font-size: 14px;
  position: relative;
  top: 1px;
}
.logoutText{
  color: #00948C;
  padding:0 8px;
  font-size: 13px;
  position: relative;
  top: 1px;
}
.imgBtn{
  width: 45%;
  max-width: 170px;
  height: 45px;
  display: inline-block;
}
.btnContainer{
  padding: 5px 0;
  display: flex;
  justify-content: space-around
}
