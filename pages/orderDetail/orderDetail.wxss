page{
  background: #EAEAEA;
}
.content{
  width: 94%;
  margin: 10px auto;
  border-radius: 5px;
  background: #fff;
  box-sizing: border-box;
  padding: 10px;
  position: relative;
}
.number{
  font-size: 14px;
  color: #222;
  margin-bottom: 10px;
}
.item{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  min-height: 30px;
  line-height: 30px;
}
.title{
  font-size: 14px;
  color: #666;
  min-height: 30px;
  line-height: 30px;
  min-width: 70px;
}
.text{
  font-size: 13px;
  min-height: 30px;
  line-height: 30px;
  flex-grow: 1;
  color: #a0a0a0;
}
.yuyin{
  width: 22px;
  height: 22px;
  position: relative;
  top: 4px;
}
.imgContainer{
  flex-grow: 1;
  padding-top: 8px;
}
.bxImg{
  width: 46px;
  height: 46px;
  margin-right: 5px;
}
.absoluteContainer{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.status{
  color: #F35150;
  font-size: 14px;
  position: absolute;
  top: 10px;
  right: 10px;
}
.btn_db{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.btn1{
  margin:10px auto;
  width:145px;
  color:#fff;
  background:#477EC1;
  text-align:center;
  padding:3px 0;
  border-radius:30px;
  font-size:15px;
}