page{
  background: #EAEAEA;
  padding-bottom: 10px;
}
.bx_item{
  width: 94%;
  margin: 10px auto 0 auto;
  border-radius: 5px;
  background: #fff;
  box-sizing: border-box;
  padding: 10px;
  position: relative;
}
.bx_number_p{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.bx_number{
  font-size: 14px;
  color: #666;
}
.bx_status{
  font-size: 14px;
  color: #F35150;
}
.bx_content{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 10px 0;
}
.bx_leftIcon{
  width: 10px;
  height: 30px;
  line-height: 26px;
}
.bx_leftIcon_img{
  width: 10px;
  height: 10px;
}
.bx_text{
  font-size: 12px;
  color: #A0A0A0;
  min-height: 30px;
  line-height: 30px;
  padding-left: 10px;
  flex-grow: 1;
  padding-right: 40px;
}
.bx_jiantou{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0
}
.bx_jiantouIcon{
  position: absolute;
  right: 10px;
  top: 50%;
}
.nodata{
  width: 128px;
  height: 112px;
  display: block;
  margin: 100px auto 0 auto;
}
.nodata_text{
  font-size: 15px;
  color: #BFBFBF;
  width: 100%;
  margin-top: 20px;
  text-align: center;
}